<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterInformationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/setupAccountTV"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:fontFamily="@font/pbold"
            android:text="Setup Account"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@+id/setupAccountTV"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/pregular"
            android:text="Please provide some more information so we can verify you."
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/imageViewFrame"
            >

            <LinearLayout

                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <FrameLayout
                android:layout_gravity="center_horizontal"

                android:id="@+id/frame"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="24dp">

                <ImageView

                    android:id="@+id/user_profile"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/profile_placeholder" />

                <ImageView

                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_back"

                    android:src="@drawable/circleimageview" />

            </FrameLayout>


            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/frame"
                android:id="@+id/taptochange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/psemibold"
                android:text="Tap to Change"
                android:textColor="#2196F3"
                android:textSize="12sp" />
            </LinearLayout>
            <EditText
                android:drawablePadding="4dp"
                android:inputType="textPersonName"

                android:layout_marginTop="20dp"
                android:id="@+id/fullNameET"
                android:fontFamily="@font/psemibold"
                android:gravity="center_vertical"
                android:hint="Full Name"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:textColor="#777"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/edittext_back"

                android:drawableStart="@drawable/ic_outline_person_24"
                />
            <EditText
                android:drawablePadding="4dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp"
                android:id="@+id/emailET"
                android:fontFamily="@font/psemibold"
                android:gravity="center_vertical"
                android:hint="Email Address"
                android:textColor="#777"
                android:textSize="13sp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/edittext_back"
                android:drawableStart="@drawable/ic_outline_email_24"
                />
            <EditText
                android:drawablePadding="4dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp"
                android:id="@+id/cityNameET"
                android:fontFamily="@font/psemibold"
                android:gravity="center_vertical"
                android:hint="City Name"
                android:textColor="#777"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/edittext_back"
                android:drawableStart="@drawable/ic_outline_place_24"
                />

            <EditText
                android:id="@+id/collegeNameET"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_back"
                android:drawableStart="@drawable/ic_outline_school_24"
                android:drawablePadding="4dp"
                android:fontFamily="@font/psemibold"
                android:gravity="center_vertical"
                android:hint="College Name"
                android:inputType="textEmailAddress"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textColor="#777"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton

                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:fontFamily="@font/psemibold"
                android:background="@drawable/back"
                android:backgroundTint="#2196F3"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="Submit"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                />
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>

