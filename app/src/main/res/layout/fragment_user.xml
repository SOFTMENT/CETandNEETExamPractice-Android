<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#fafafa"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".Fragment.UserFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_outline_mode_edit_24"

            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pbold"
        android:lines="1"
        android:text="My Account"
        android:textColor="@color/dark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >
        <com.makeramen.roundedimageview.RoundedImageView
            
            app:riv_corner_radius="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:id="@+id/profileImage"
            android:src="@drawable/profile_placeholder"
            />
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pbold"
            android:textSize="18sp"
            android:textColor="@color/dark"
            android:id="@+id/name"

            />

        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support@softment.in"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/pregular"
            android:textSize="13sp"
            android:textColor="@color/light_gray"
            />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginTop="6dp"
          >
          <ImageView
              android:layout_width="14dp"
              android:layout_height="14sp"
              android:src="@drawable/ic_outline_location_on_24"
              />
          <TextView
              android:layout_marginStart="3dp"
              android:id="@+id/city"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Bhopal"
              android:fontFamily="@font/pregular"
              android:textSize="13sp"
              android:textColor="@color/light_gray"

              />
      </LinearLayout>
              <RelativeLayout

                  android:id="@+id/logoutRR"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="20dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="@font/pbold"
                      android:text="Settings"
                      android:textColor="@color/dark"
                      android:textSize="14sp" />

                  <TextView
                      android:id="@+id/logout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="20dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="@font/psemibold"
                      android:text="Logout"
                      android:textColor="@color/main_color"
                      android:textSize="13sp" />

              </RelativeLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginStart="20dp"
                  android:orientation="vertical">

                  <RelativeLayout
                      android:id="@+id/membership"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Manage Membership"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>
                  <RelativeLayout
                      android:id="@+id/notification"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Notification Centre"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="@font/pbold"
                      android:text="Support"
                      android:textColor="@color/dark"
                      android:textSize="14sp" />

                  <RelativeLayout
                      android:id="@+id/help_cener"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Help Center"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/rateApp"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Rate App"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/shareApp"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Share App"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="@font/pbold"
                      android:text="About"
                      android:textColor="@color/dark"
                      android:textSize="14sp" />

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Version"
                          android:textSize="12sp" />

                      <TextView
                          android:textColor="@color/light_gray"
                          android:id="@+id/version"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:fontFamily="@font/pregular"
                          android:text="1.0"
                          android:textSize="12sp" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_alignParentBottom="true"
                          android:background="#A8919191"

                          />
                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/privacy_policy"
                      android:layout_width="match_parent"
                      android:layout_height="56dp">

                      <TextView
                          android:textColor="@color/light_gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:fontFamily="@font/pregular"
                          android:text="Privacy Policy"
                          android:textSize="12sp" />

                      <ImageView

                          android:layout_width="16dp"
                          android:layout_height="16dp"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="20dp"
                          android:src="@drawable/right" />


                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_marginBottom="16dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginTop="10dp"
                        android:background="@drawable/deletebtnback"
                      android:id="@+id/delete_account"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:fontFamily="@font/pbold"
                          android:text="Delete Account"
                          android:textAlignment="center"
                          android:textColor="#F44336"
                          android:textSize="13sp" />

                  </RelativeLayout>
              </LinearLayout>




    </LinearLayout>

</RelativeLayout>
</ScrollView>
